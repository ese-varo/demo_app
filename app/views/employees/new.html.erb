<h1>New Employee</h1>

<% if current_user.branches.any? %>
  <%= render 'form', branches: current_user.branches %>
<% else %>
  <div class="container">
    <div class="row">
      <p>Please first register at least one company branch</p>
    </div>
    <div class="row mb-5">
      <%= link_to 'Ad a new to the company', new_user_branch_path(current_user),
        class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>


