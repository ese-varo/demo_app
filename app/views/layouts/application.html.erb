<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <div class="container-fluid mb-8">
      <div class="row">
        <div class="container">
          <p class="notice alert-success" role="alert"><%= notice %></p>
          <p class="alert" role="alert"><%= alert %></p>
          <%= yield %>
        </div>
      </div>
      <div class="container">
        <hr class="my-4">
        <footer class="row my-5">
          <small>
            <p>&copy; Proyekt Company 2020</p>
          </small>
        </footer>
      </div>
    </div>
  </body>
</html>
