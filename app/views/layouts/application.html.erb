<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <div class="container-fluid mb-8">
      <div class="row">
        <div class="container">
          <p class="notice alert-success" role="alert"><%= notice %></p>
          <p class="alert" role="alert"><%= alert %></p>
          <%= yield %>
        </div>
      </div>
    </div>
    <hr class="my-4">
    <div class="container">

      <footer class="row my-2">
        <small>
          <p>&copy; Proyekt Company 2020 Developed by <%= link_to 'varo', 'https://github.com/ese-varo' %> | <%= link_to 'Github', 'https://github.com/ese-varo/demo_app' %></p>
        </small>
      </footer>

      <%# <%= debug(params) %1> %>
      <%# <%= console %1> %>

    </div>
  </body>
</html>
